<div class="page-header">
  <h1>Game #<%= @game.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>User</dt>
  <dd><%= @game.user_id %></dd>

  <dt>Location</dt>
  <dd><%= @game.location %></dd>

  <dt>Time</dt>
  <dd><%= @game.time %></dd>

  <dt>Date</dt>
  <dd><%= @game.date %></dd>

  <dt>Sport</dt>
  <dd><%= @game.sport %></dd>

  <dt>Rsvp</dt>

  <% invite = @game.invites.find_by(:user_id => current_user.id) %>
  <% if invite.present? %>
  <a href="/update_invite/<%= invite.id %>?rsvp=<%= true %>" class="btn btn-success">I'm in!</a>
  <% end %>


  <dt>Players</dt>
  <dd><%= @game.user_id %></dd>


  <% @game.players.each do |player| %>
      <dd value="<%= player.id %>"><%= player.id %></dd>
  <% end %>




</dl>
