<div class="page-header">
  <h1>Game #<%= @game.id %></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>Time</th>
      <th>Date</th>
      <th>Sport</th>
      <th>Rsvp</th>
    </tr>
  </thead>

  <tbody>
  <tr>
    <td><%= @game.user_id %></td>
    <td><%= @game.location %></td>
    <td><%= @game.time %></td>
    <td><%= @game.date %></td>
    <td><%= @game.sport %></td>
    <td>
      <% invite = @game.invites.find_by(:user_id => current_user.id) %>
      <% if invite.present? %>
      <a href="/update_invite/<%= invite.id %>?rsvp=<%= true %>" class="btn btn-success">I'm in!</a>
      <% end %>
    </td>
  </tr>
  </tbody>

</table>



<table>
<thead>
    <tr>
      <th>Players</th>
    </tr>
    <tbody>
      <td>
        <% @game.players.each do |player| %>
            <dd value="<%= player.id %>"><%= player.id %></dd>
        <% end %>
      </td>
    </tbody>
</table>



