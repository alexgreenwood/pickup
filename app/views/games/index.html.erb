<div class="page-header">
  <h1>Games</h1>
</div>

<p><a href="/games/new" class="btn btn-primary">Add a New Game</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Organizer</th>
      <th>Location</th>
      <th>Time</th>
      <th>Date</th>
      <th>Sport</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user_id %></td>
        <td><%= game.location %></td>
        <td><%= game.time %></td>
        <td><%= game.date %></td>
        <td><%= game.sport %></td>
        <td>
          <a href="/games/<%= game.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/games/<%= game.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_game/<%= game.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

