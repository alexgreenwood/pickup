<div class="page-header">
  <h1>Invites</h1>
</div>

<p><a href="/invites/new" class="btn btn-primary">Add a New Invite</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rsvp</th>
      <th>Game</th>
      <th>Organizer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.rsvp %></td>
        <td><%= invite.game_id %></td>
        <td><%= invite.user_id %></td>
        <td>
          <a href="/invites/<%= invite.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/invites/<%= invite.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_invite/<%= invite.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

